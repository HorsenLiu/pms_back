<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.horsen.pms.mapper.TaskMapper">
    <!-- 根据项目ID查询项目名称 -->
    <select id="getProjName" resultType="String">
        SELECT name
        FROM pms_horsen.project
        WHERE id = #{id}
    </select>
    <!-- 根据员工ID查询员工姓名 -->
    <select id="getStaffName" resultType="String">
        SELECT name
        FROM pms_horsen.staff
        WHERE id = #{id}
    </select>

    <resultMap id="TaskMap" type="Task">
        <result property="projId" column="proj_id"/>
        <result property="staffId" column="staff_id"/>
        <association property="projName" column="proj_id" javaType="String" select="getProjName"/>
        <association property="staffName" column="staff_id" javaType="String" select="getStaffName"/>
    </resultMap>

    <!-- 查询时使用的SQL片段 -->
    <sql id="select-for">
        SELECT id, name, start_time, end_time, proj_id, staff_id
        FROM pms_horsen.task
    </sql>

    <!-- 根据ID查询一个任务 -->
    <select id="queryTaskById" resultMap="TaskMap" parameterType="int">
        <include refid="select-for"/>
        WHERE id = #{id}
          AND is_deleted = 0
    </select>

    <!-- 根据条件查询任务 -->
    <select id="queryTask" resultMap="TaskMap" parameterType="Task">
        <include refid="select-for"/>
        <where>
            is_deleted = 0
            <if test="name != null">AND name LIKE "%"#{name}"%"</if>
            <if test="startTime != null">AND start_time = #{startTime}</if>
            <if test="endTime != null">AND end_time = #{endTime}</if>
            <if test="projId != null">AND proj_id = #{projId}</if>
            <if test="staffId != null">AND staff_id = #{staffId}</if>
        </where>
    </select>

    <!-- 插入一个任务 -->
    <insert id="insertTask" parameterType="Task">
        INSERT INTO pms_horsen.task(name, start_time, end_time, proj_id, staff_id)
        VALUES (#{name}, #{startTime}, #{endTime}, #{projId}, #{staffId})
    </insert>

    <!-- 修改一个任务 -->
    <update id="updateTask" parameterType="Task">
        UPDATE pms_horsen.task
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="projId != null">proj_id = #{projId},</if>
            <if test="staffId != null">staff_id = #{staffId},</if>
        </set>
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <!-- 根据ID删除一个任务 -->
    <update id="deleteTask" parameterType="int">
        UPDATE pms_horsen.task
        SET is_deleted = 1
        WHERE id = #{id}
          AND is_deleted = 0
    </update>

</mapper>